<div class="container special-margin">
  <div class="d-flex justify-content-center">
    <h1><strong>Edit your Reservation</strong></h1>
  </div>

  <%= simple_form_for [ @van, @reservation ] do |f| %>
    <div class="container">
      <div class="row">
        <div class="col">
          <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
        </div>
        <div class="col">
          <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
        </div>
      </div>
    </div>
    <div class="row my-5">
      <div class="col d-flex justify-content-end">
        <%= f.button :submit, "Go", class: "btn btn-warning" %>
        <%= link_to "Delete",
              reservation_path(@reservation),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-dark mx-3" %>
        <%= link_to 'Back', reservations_path, class: "btn btn-dark" %>
      </div>
    </div>
  <% end %>
</div>
