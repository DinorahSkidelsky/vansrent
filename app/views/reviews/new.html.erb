<div class="container">
  <h1 class="d-inline-flex p-2 bd-highlight">Write a Review:</h1>

  <%= simple_form_for [ @reservation, @review ] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating %>
    <%= f.submit "Go", class: "btn btn-primary" %>
  <% end %>

  <br>
  <%= link_to 'Back', reservations_path, class: "btn btn-primary" %>
</div>
