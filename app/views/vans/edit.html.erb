<div class="container">
  <h1>Edit your Van:</h1>

    <div class="d-flex justify-content-center">
      <%= simple_form_for(@van) do |f| %>
        <%= f.input :description %>
        <%= f.input :place %>
        <%= f.input :model %>
        <%= f.input :brand %>
        <%= f.input :price %>
        <% @van.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 100, width: 250, crop: :fill %>
        <% end %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit %>
      <% end %>
    </div>

    <%= link_to "Delete",
                van_path(@van),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>

    <br>
    <br>
    <%= link_to "Back", van_path(@van), class: "btn btn-primary"%>
</div>
