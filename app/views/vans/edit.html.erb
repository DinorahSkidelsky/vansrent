<div class="container">
  <div class="row pb-5">
    <div class="col py-5">
      <%= image_tag("https://i.pinimg.com/736x/6c/66/ef/6c66ef8d892e789e42967950741d5509.jpg", width: 600) %>
    </div>
    <div class="col border">
      <div class="d-flex justify-content-center my-4">
        <h1><strong>Edit your Van</strong></h1>
      </div>
      <div class="d-flex justify-content-center">
        <%= simple_form_for(@van) do |f| %>
          <%= f.input :description %>
          <%= f.input :place %>
          <%= f.input :model %>
          <%= f.input :brand %>
          <%= f.input :price %>
          <% @van.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 100, width: 250, crop: :fill %>
          <% end %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "Save", class: "btn btn-warning mx-5 my-2"%>
          <%= link_to "Back", van_path(@van), class: "btn btn-dark mx-5"%>
        <% end %>
      </div>
      <div class="d-flex justify-content-end pb-3">
      </div>
    </div>
  </div>
</div>
