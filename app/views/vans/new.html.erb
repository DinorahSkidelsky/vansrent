<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag("https://barefootdetour.com/wp-content/uploads/2019/09/beautiful-vanlife-4-900x1125.jpg.webp", width: 550) %>
    </div>
    <div class="col border">
      <div class="d-flex justify-content-center my-4">
        <h1><strong>Create your Van:</strong></h1>
      </div>
      <div class="d-flex justify-content-center my-3">
        <%= simple_form_for(@van) do |f| %>
          <%= f.input :description %>
          <%= f.input :place %>
          <%= f.input :model %>
          <%= f.input :brand %>
          <%= f.input :price %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "Create Van", class: "btn btn-warning mx-5" %>
          <%= link_to "Back to Home", root_path, class: "btn btn-dark mx-5"%>
        <% end %>
      </div>
    </div>
</div>
</div>
