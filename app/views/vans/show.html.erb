<div class="banner-show" style="background-image: url(https://i.pinimg.com/originals/cc/14/b9/cc14b9abd4d085b67a6cc5e84e271929.jpg);">
  <div class="container">
   <h2><strong>Camper Life start here</strong></h2>
  </div>
</div>

<div class="container">
  <div class="cards">
    <div class="card-product">
      <% @van.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    <div class="card-product-infos">
    <h3><%= @van.description %></h3>
      <p><%= @van.model %></p>
      <p><%= @van.brand %></p>
      <p>$<%= @van.price %>/ Night</p>
      <%= link_to 'Rent Now', new_van_reservation_path(@van), class: "btn btn-warning moved-button" %>
      <%= link_to "Edit | Delete", edit_van_path(@van), class: "btn btn-dark moved-button" %>
    </div>
  </div>
</div>

  <div>
  <br>
  <h3>Review:</h3>
    <ul><% @van.reviews.each do |review|  %>
      <li><%= review.comment %>
      <%= '*' * review.rating %></li>
    <% end %></ul>
  </div>

  <br>

  <%# solo para el usuario que alquila %>
  <br>
  <br>

